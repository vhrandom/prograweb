modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Dev Server"
author = 46880299
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd AppleAura && pkill -f \"tsx server/index.ts\" || true && npm run dev"

[[workflows.workflow]]
name = "Dev Server Clean"
author = 46880299
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd AppleAura && pkill -f \"tsx server/index.ts\" || true && pkill -f \"node.*5000\" || true && sleep 2 && npm run dev"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd AppleAura && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
